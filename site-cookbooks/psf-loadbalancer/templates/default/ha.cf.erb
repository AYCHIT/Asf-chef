logfacility     local0

keepalive       250ms
deadtime        2
warntime        1
initdead        15

udpport         694

<% @nodes.select{|n| n['fqdn'] != node['fqdn']}.each do |n| -%>
ucast <%= @interface %> <%= n['ipaddress'] %>
<% end -%>

auto_failback   off

<% @nodes.each do |n| -%>
node <%= n['fqdn'].split('.').first %>
<% end -%>
