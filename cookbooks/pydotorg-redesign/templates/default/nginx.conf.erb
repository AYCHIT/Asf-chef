upstream <%= @resource.application.name %> {
  <% unless @application_socket.empty? -%>
    <% @application_socket.each do |socket_name| -%>
  server unix:<%= socket_name %>;
    <% end -%>
  <% end -%>
  <% @hosts.each do |node| %>
  server <%= node %>:<%= @resource.application_port %>;
  <% end %>
}

